package com.ridebookingapp.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.crypto.password.PasswordEncoder;
import org.springframework.stereotype.Service;

import com.ridebookingapp.model.User;
import com.ridebookingapp.model.UserDto;
import com.ridebookingapp.model.UserRole;
import com.ridebookingapp.repository.UserRepository;
import com.ridebookingapp.model.User;

@Service
public class UserServiceImpl implements UserService {

    @Autowired
    private UserRepository userRepository;
    
    @Autowired
    private PasswordEncoder passwordEncoder; // For hashing passwords

    @Override
    public org.apache.catalina.User save(UserDto userDto) {
        User user = new User();
        user.setEmail(userDto.getEmail());
        user.setPassword(passwordEncoder.encode(userDto.getPassword())); // Encrypt password
        user.setRole(userDto.getRole()); // Assign role properly
        user.setFullName(((org.apache.catalina.User) userDto).getFullName());

        return userRepository.save((S) user);
    }
}
